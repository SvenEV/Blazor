@implements ILayoutComponent

<div style="position: absolute; width: 100%; height: 100%;">
    <div style="position: absolute; width: 100%; height: 40px; background-color: #EEE; padding: 8px;">
        <NavLink href="/" Match=NavLinkMatch.All>
            <span class='glyphicon glyphicon-home'></span> Home
        </NavLink>
        <NavLink href="/imagetests">
            <span class='glyphicon glyphicon-picture'></span> Image
        </NavLink>
    </div>
    <div style="position: absolute; width: 100%; height: calc(100% - 40px); top: 40px;">
        @Body
    </div>
</div>

@functions
{
    public RenderFragment Body { get; set; }
}
