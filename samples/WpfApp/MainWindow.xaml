<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" Width="800" Height="600">
    
    <StackPanel>

        <Border Background="Red" Width="200" Height="40"/>
        <Border Background="DarkRed" MaxWidth="300" Height="40" Margin="350,10"/>
        <Border Background="DarkRed" MaxWidth="300" Height="40" />
        <Border Background="DarkRed" Width="200" Height="40" HorizontalAlignment="Left"/>
        <Border Background="DarkRed" Width="200" Height="40" HorizontalAlignment="Center"/>
        <Border Background="DarkRed" Width="200" Height="40" HorizontalAlignment="Right"/>

        <Border BorderBrush="DarkGreen" BorderThickness="10" Padding="10" CornerRadius="20"
                HorizontalAlignment="Stretch" Width="400">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Border Width="50" Height="50" Background="Green" Margin="0,0,10,0"/>
                <Border Width="50" Height="50" Background="Green" Margin="0,0,10,0"/>
                <Border Width="50" Height="50" Background="Green"/>
            </StackPanel>
        </Border>

    </StackPanel>
    
</Window>
